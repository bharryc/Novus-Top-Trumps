@model string

<!DOCTYPE html>
<html>
<head>
    <title>Game Result</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            padding: 20px;
        }

        .heading {
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
            margin-bottom: 20px;
            color: #007bff;
            font-size: 24px;
        }

        p {
            font-size: 18px;
            margin: 20px 0;
        }

        .btn {
            display: inline-block;
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
            font-weight: bold;
            margin-top: 20px;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <h2 class="heading">Game Result</h2>

    @if (Model == "Winner")
    {
        <p>Congratulations! You won the game.</p>
    }
    else if (Model == "Loser")
    {
        <p>AI wins. Better luck next time!</p>
    }
    <a asp-controller="DeckSelector" asp-action="Index" class="btn">Play Again</a>
</body>
</html>
